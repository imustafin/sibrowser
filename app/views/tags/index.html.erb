<h1 class="text-2xl font-bold text-center pb-2">
  <%= t('tags') %>
</h1>

<table class="w-full">
  <thead>
    <tr class="bg-indigo-600 text-white">
      <th class="text-center py-4 px-3"><%= t('tag') %></th>
      <th class="text-center py-4 px-3"><%= t('package_count') %></th>
    </tr>
  </thead>
  <% @tags.each do |t| %>
    <tr>
      <td class="py-4 text-center">
        <%= tag_link t.tag, class: 'font-bold' %>
      </td>
      <td class="text-center">
        <%= t.count %>
      </td>
    </tr>
  <% end %>
</table>
<div class="mt-4">
  <%= paginate @tags %>
</div>
