<%= flash[:notice] %>

<% if admin? %>
  <%= button_to "Logout", logout_path, method: :post %>
<% else %>
  <%= form_with url: login_path  do |f| %>
    <%= f.label :login %>
    <%= f.text_field :login, tabindex: 1 %>

    <%= f.label :password %>
    <%= f.password_field :password, tabindex: 2 %>

    <%= submit_tag 'Login' %>
  <% end %>
<% end %>

<% if admin? %>
  <%= link_to 'Category stats', admin_cat_stats_path, class: 'font-bold' %>
<% end %>
