<div class="container mx-auto">
  <h1 class="text-2xl font-bold text-center pb-4 pt-8">
    Packages
  </h1>
  <table class="table-fixed container mx-auto mb-4">
    <thead>
      <tr class="bg-indigo-500">
        <th class="w-1/2 text-center py-4">Name</th>
        <th class="w-1/4 text-center py-4">Authors</th>
        <th class="w-1/4 text-center py-4">Download from Source</th>
      </tr>
    </thead>
    <tbody>
      <% @packages.each do |package| %>
      <tr class="bg-indigo-100 hover:bg-indigo-200 text-black">
        <td class="py-4 text-center">
          <%= link_to package.name, package, class: 'font-bold' %>
        </td>
        <td class="text-center"><%= package.authors || '?' %></td>
        <td class="text-center">
          <a
            class="border-4 border-transparent bg-purple-500 ml-3 py-2 px-4 font-bold text-white hover:border-purple-600"
            href="<%= package.source_link %>"
          >
            Link
          </a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @packages %>
</div>

