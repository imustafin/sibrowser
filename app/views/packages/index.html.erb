<p>
  <%= t('packages_for_sigame',
        link: link_to('SIGame', 'https://vladimirkhil.com/si/game', class: 'font-bold')).html_safe
  %>
  <%= t('sigame_author',
        link: link_to(t('khil'), 'https://vladimirkhil.com/', class: 'font-bold')).html_safe
  %>
</p>
<p>
  <%= t('on_this_site_packages',
        link: link_to(
          'Пакеты, созданные своими руками',
          'https://vk.com/topic-135725718_34975471',
          class: 'font-bold'
        )
      ).html_safe
  %>
</p>
<h1 class="text-2xl font-bold text-center pb-2 pt-4">
  <%= t('packages') %>
</h1>
<%= form_tag(packages_path, method: :get, class: 'mb-2') do %>
  <%= text_field_tag(:q, params[:q], class: 'p-2') %>
  <%= submit_tag(t('search'), name: nil, class: button_class(type: :small)) %>
<% end %>
<div class="w-full overflow-x-auto">
  <table class="w-full">
    <thead>
      <tr class="bg-indigo-600 text-white">
        <%= sortable t('published_at'), :published_at, class: 'w-36 text-center py-4 px-3' %>
        <%= sortable t('name'), :name, class: 'w-72 text-center py-4 px-3' %>
        <%= sortable t('authors'), :authors, class: 'w-52 text-center py-4 px-3' %>
        <th class="w-52 text-center py-4 px-3"><%= t('tags') %></th>
        <th class="w-44 text-center py-4 px-3"><%= t('questions') %></th>
        <th class="w-32 text-center py-4 px-3"><%= t('download') %></th>
      </tr>
    </thead>
    <tbody>
      <% @packages.each do |package| %>
      <tr class="bg-indigo-200 hover:bg-indigo-300 text-black">
        <td class="py-4 text-center">
          <%= l package.published_at.to_date %>
        </td>
        <td class="text-center">
          <%= link_to package.name, package, class: 'font-bold' %>
        </td>
        <td class="text-center">
          <% if package.authors.present? %>
            <%= package.authors.join(', ')  %>
          <% end %>
        </td>
        <td class="text-center">
          <% if package.tags.present? %>
            <%= package.tags.join(', ') %>
          <% end %>
        </td>
        <td>
          <div class="w-full h-6">
            <%= distribution(package.question_distribution) %>
          </div>
        </td>
        <td class="text-center">
          <a
            class="<%= button_class %>"
            href="<%= package.source_link %>"
          >
            <%= t('link') %>
          </a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="mt-4">
  <%= paginate @packages %>
</div>
