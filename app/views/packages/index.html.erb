<h1>Packages</h1>

<ul>
  <% @packages.each do |package| %>
    <li>
      <h2><%= package.name %></h2>

      <% if package.authors.present? %>
        <h3>by <%= package.authors %></h3>
      <% end %>

      <a href="<%= package.source_link %>">Download from Source</a>
    </li>
  <% end %>
</ul>
<%= paginate @packages %>
