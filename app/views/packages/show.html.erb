<div class="container mx-auto">
  <h1 class="text-2xl font-bold text-center pt-8">
    <%= @package.name %>
  </h1>
  <h2 class="text-xl font-bold text-center pb-4">
    by <%= @package.authors || '?' %>
  </h2>
  Added to Sibrowser: <%= @package.created_at %> <br>
  <% if @package.created_at != @package.updated_at %>
    Information changed in Sibrowser: <%= @package.updated_at %> <br>
  <% end %>
  <a
    class="border-2 border-transparent bg-indigo-500 inline-block py-2 px-4 font-bold text-white hover:border-indigo-900"
    href="<%= @package.source_link %>"
  >
    Download from Source
  </a>
</div>
