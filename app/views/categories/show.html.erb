<h1 class="text-2xl font-bold text-center mb-4">
  <%= t(category, scope: :category_names, default: category) %>
</h1>

<%=
begin
  text_rendered = render "category_text_#{category}_#{I18n.locale}"
rescue ActionView::MissingTemplate
  nil
end
%>

<% unless text_rendered %>
  <h2 class="text-xl mb-2 text-center">
    <%= t('category_packages') %>
  </h2>
<% end %>

<%= render PackagesPaginated::Component.new(packages:) %>
