<div
  data-controller="packages_paginated--local--component package_card--bookmark"
  data-localkey="<%= @local_key %>"
>
  <%= helpers.turbo_stream_from :download_counts %>
  <div
    class="italic text-center hidden"
    data-packages_paginated--local--component-target="empty"
  >
    <%= t(:packages_not_found) %>
  </div>
  <div
    id="packages"
    class="w-full"
  >
  </div>
  <div
    data-packages_paginated--local--component-target="afterLast"
    class="
      flex m-auto justify-center items-center w-fit
      animate-pulse
      bg-indigo-200 py-2 px-8 rounded-md
      my-4
    "
  >
    <%= helpers.heroicon :wifi, options: { class: 'h-8 mr-4' } %>
    <%= t(:loading) %>
  </div>
</div>
